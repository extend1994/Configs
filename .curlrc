# Automatically set the previous URL as the source to visit the current page
referer = ";auto"

# Avoid hanging around
retry = 5
retry-delay = 5
retry-max-time  = 30
connect-timeout = 30

# Use compressed mode to get data
compressed

# Follow redirects
location

# Create directory if necessary when option "-o" is used
create-dirs

# exit with non-zero status code when something wrong
fail
