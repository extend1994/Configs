# Disguise as latest Firefox release as of 201800702 on Windows WOW64
user-agent = Mozilla/5.0 (Windows NT 6.1; WOW64; rv:61.0) Gecko/20100101 Firefox/61.0

# Avoid hanging around
tries = 5
waitretry = 5
timeout = 30
retry_connrefused = on

# Don't download robot.txt which is for SEO
robots = off

# Create directory if necessary when option "-O" is used
dirstruct = on

# Don't enter parent directory
no_parent = on

# Consider “connection refused” a transient error, don't retry
retry_connrefused = on

# Only get file with different timestamp
timestamping = on

# Download file with appropriate file extenson
adjust_extension = on
