# Avoid hanging around
tries = 5
waitretry = 5
timeout = 30
retry_connrefused = on

# Don't download robot.txt which is for SEO
robots = off

# Don't enter parent directory
no_parent = on

# Consider “connection refused” a transient error, don't retry
retry_connrefused = on

# Only get file with different timestamp
timestamping = on

# Download file with appropriate file extenson
adjust_extension = on
